<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/demoAuthScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aldrich"
        android:text="Hello, UserName"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailstatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Your email:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="email"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/emailstatementTextView"
        app:layout_constraintTop_toBottomOf="@+id/emailstatementTextView" />

    <TextView
        android:id="@+id/requestsStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your requests:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/emailTextView"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <Button
        android:id="@+id/requestsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View your requests"
        app:layout_constraintStart_toStartOf="@+id/requestsStatementTextView"
        app:layout_constraintTop_toBottomOf="@+id/requestsStatementTextView" />

    <TextView
        android:id="@+id/listingsStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your listings:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/requestsButton"
        app:layout_constraintTop_toBottomOf="@+id/requestsButton" />

    <Button
        android:id="@+id/reviewItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Your Items"
        app:layout_constraintStart_toStartOf="@+id/listingsStatementTextView"
        app:layout_constraintTop_toBottomOf="@+id/listingsStatementTextView" />

    <TextView
        android:id="@+id/pendingStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pending Transactions:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/reviewItemsButton"
        app:layout_constraintTop_toBottomOf="@+id/reviewItemsButton" />

    <Button
        android:id="@+id/pendingTransactionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Pending"
        app:layout_constraintStart_toStartOf="@+id/pendingStatementTextView"
        app:layout_constraintTop_toBottomOf="@+id/pendingStatementTextView" />

    <TextView
        android:id="@+id/historyStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Transaction History:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pendingTransactionsButton"
        app:layout_constraintTop_toBottomOf="@+id/pendingTransactionsButton" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View History"
        app:layout_constraintStart_toStartOf="@+id/historyStatementTextView"
        app:layout_constraintTop_toBottomOf="@+id/historyStatementTextView" />

    <TextView
        android:id="@+id/logoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done?"
        app:layout_constraintBottom_toTopOf="@+id/lgoutButton"
        app:layout_constraintEnd_toEndOf="@+id/lgoutButton"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/lgoutButton" />

    <Button
        android:id="@+id/lgoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>